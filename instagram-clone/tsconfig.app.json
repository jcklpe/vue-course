{
  // Base your app on the official Vue DOM + TS config
  "extends": "@vue/tsconfig/tsconfig.dom.json",

  // Which files to include for your app
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],

  "compilerOptions": {
    // (this was already there) — preserve where to cache type-info
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    // alias `@/` → `./src/`
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
